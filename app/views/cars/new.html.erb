<div class="row">
  <div class="large-8 large-offset-2 columns">

  <li><%= link_to "Add new Manufacturer", new_manufacturer_path %></li>
  <li><%= link_to "View all Cars", cars_path%></li>
  <li><%= link_to "Home", manufacturers_path %></li>

  <%= form_for(@car) do |f| %>
    <h1> Enter new Car information </h1>
    <% if @car.errors.any? %>
      <div id="error_explanation">
        <h2><%= "#{@car.errors.count} errors prevented the car from being saved" %></h2>
        <ul>
        <% @car.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
    <h3> Choose manufacturer </h3>
    <%= f.collection_select :id, @manufacturers, :id, :name %>
    </div>

    <div class="field">
      <%= f.label :model %><br>
      <%= f.text_field :model %>
    </div>
    <div class="field">
    <%= f.label :year %><br>
    <%= f.select :year, (Time.zone.now.year - 95)..(Time.zone.now.year + 1)%>
    </div>

    <div class="field">
        <%= f.label :color %><br />
        <%= f.text_field :color %>
      </div>

    <div class="field">
      <%= f.label :mileage %><br />
      <%= f.text_field :mileage %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>

    <div class="actions">
    <%= f.submit "Submit" %>
    </div>

    <%end%>
  </div>
</div>